    "eslint-plugin-prettier": "2.6.0",
    "husky": "0.14.3",
    "lint-staged": "7.0.0",
    "parcel-bundler": "^1.6.2",
    "prettier": "1.11.1",
    "rollup": "^0.57.1",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "uglify-es": "^3.3.9"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">= 8.9.4",
    "npm": ">= 5.6.0"
  }
}
